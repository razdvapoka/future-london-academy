@import '../../style/utils.styl'

.diagram
  position: relative
  width: pxToRem(728)
  height: pxToRem(728)

.item,
.itemDisabled
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center
  transition: opacity 0.3s ease

.itemDisabled
  opacity: 0.3

