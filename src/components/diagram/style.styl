@import '../../style/utils.styl'
@import '../../style/media.styl'

.diagram
  position: relative
  width: pxToRem(728)
  height: pxToRem(728)
  overflow: hidden
  +mobile()
    width: pxToRem(342)
    height: pxToRem(342)
    margin-top: pxToRem(40)

.diagramActivated
  @extends .diagram
  .item
  .itemDisabled
    .itemContent
      transform: rotate(0)

.item,
.itemDisabled
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center
  transition: opacity 0.5s ease
  pointer-events: none

.itemDisabled
  opacity: 0.3

.itemContent
  transition: transform 1s ease

.world
  transform: rotate(20deg)
  width: pxToRem(728)
  height: pxToRem(728)
  +mobile()
    width: pxToRem(342)
    height: pxToRem(342)

.company
  transform: rotate(-30deg)
  width: pxToRem(576)
  height: pxToRem(576)
  +mobile()
    width: pxToRem(271)
    height: pxToRem(271)

.team
  transform: rotate(40deg)
  width: pxToRem(423)
  height: pxToRem(423)
  +mobile()
    width: pxToRem(199)
    height: pxToRem(199)

.product
  transform: rotate(-50deg)
  width: pxToRem(271)
  height: pxToRem(271)
  +mobile()
    width: pxToRem(127)
    height: pxToRem(127)

.person
  transform: rotate(60deg)
  width: pxToRem(119)
  height: pxToRem(119)
  +mobile()
    width: pxToRem(56)
    height: pxToRem(56)

