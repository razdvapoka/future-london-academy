@import '../../style/consts.styl'
@import '../../style/utils.styl'

.gridBox
  position: relative
  &:before
    display: block
    content: " "
    width: 100%
    padding-top: (1 / 2) * 100%

.grid
  position: absolute
  top 0
  left 0
  right 0
  bottom 0

  display: grid
  grid-template-columns: repeat(8, 1fr)
  grid-template-rows: repeat(4, 1fr)

  border: pxToRem(1.5) solid black
  &Cell
    border: pxToRem(1.5) solid black
    background-color: $YELLOW

.title
  grid-area: 1 / 1 / 2 / 2

.slogan
  grid-area: 3 / 6 / 4 / 9
  p
    max-width: pxToRem(545)

.description
  grid-area: 1 / 3 / 3 / 5
  p
    max-width: pxToRem(262)

.apply
  grid-area: 4 / 3 / 5 / 5
  background-color: $BLACK
  color: $YELLOW

.date
  grid-area: 1 / 8 / 2 / 9
  span
    transform: rotate(-45deg)

.bottom
  margin-top: pxToRem(50)
