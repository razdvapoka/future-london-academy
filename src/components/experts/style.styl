@import '../../style/consts.styl'
@import '../../style/utils.styl'
@import '../../style/media.styl'

.experts
  margin-top: pxToRem(30)
  border-bottom: pxToRem(2) solid $BLACK
  +mobile()
    margin-top: pxToRem(60)
    border-bottom: pxToRem(1) solid $BLACK

.caption
  margin-bottom: pxToRem(20)

.row
  display: flex
  justify-content: space-between
  height: pxToRem(305)
  border-top: pxToRem(2) solid $BLACK
  desktopOnly()

.rowM
  display: none
  justify-content: space-between
  height: pxToRem(100)
  border-top: pxToRem(1) solid $BLACK
  +mobile()
    display: flex

.item
  display: block
  flex: 1
  display: flex
  align-items: center
  justify-content: center
  position: relative
  &:hover
    .circle
      transform: scale(1)
      +mobile(0)
        transform: scale(1) translateX(-50%)

.circle
  position: absolute
  left: 0
  top: 0
  transition: transform 0.5s ease
  transform: scale(0)
  width: 100%
  height: 100%
  border-radius: 9999px
  background-color: $BLACK
  color: $YELLOW
  display: flex
  align-items: center
  justify-content: center
  +mobile()
    transform-origin: left
    width: pxToRem(100)
    height: pxToRem(100)
    left: 50%
    transform: scale(0) translateX(-50%)

